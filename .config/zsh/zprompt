# vi:syntax=zsh
setopt promptsubst
autoload -Uz add-zsh-hook

parse_git_branch() {
	psvar[1]="$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1 /')"
}
add-zsh-hook precmd parse_git_branch

PROMPT="%F{cyan}[%B%n@%m %F{blue}%4~%b%F{cyan}]" # "[user@hostname ~]"
PROMPT+="%(?..%B%F{red}%? )"
PROMPT+="%b%F{blue}%(!.#.$) %f" # " $ "

RPROMPT+="%B%F{blue}%v"
RPROMPT+="%F{cyan}[%*]"
