{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
			"filetypes": ["go"]
		},
		"latex": {
			"command": "texlab",
			"filetypes": ["tex"]
		},
		"haskell": {
			"command": "hie-wrapper",
			"args": ["--lsp"],
			"rootPatterns": [
				"*.cabal",
				"stack.yaml",
				"cabal.project",
				"package.yaml"
			],
			"filetypes": [
				"hs",
				"lhs",
				"haskell"
			],
			"initializationOptions": {
				"languageServerHaskell": {
				}
			}
		}
	}
}
